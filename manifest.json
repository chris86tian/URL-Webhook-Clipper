{
  "manifest_version": 3,
  "name": "URL Webhook Clipper",
  "version": "1.4",
  "description": "Send URLs, notes, and files via webhook",
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "clipboardRead",
    "notifications"  // Hinzugefügte Berechtigung für Benachrichtigungen
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
